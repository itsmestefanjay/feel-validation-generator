{
  "openapi": "3.0.1",
  "info": {
    "title": "Example Customer Validation API",
    "version": "1.0.0"
  },
  "paths": {
    "/customers": {
      "post": {
        "summary": "Creates a customer and validates payload",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "customerId",
                  "annualIncome",
                  "firstName",
                  "newsletterConsent",
                  "profile"
                ],
                "properties": {
                  "customerId": {
                    "type": "string",
                    "description": "Unique identifier for the customer"
                  },
                  "annualIncome": {
                    "type": "number",
                    "format": "double"
                  },
                  "firstName": {
                    "type": "string",
                    "minLength": 1
                  },
                  "preferredContactTime": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "newsletterConsent": {
                    "type": "boolean"
                  },
                  "profile": {
                    "type": "object",
                    "required": [
                      "bio"
                    ],
                    "properties": {
                      "bio": {
                        "type": "string",
                        "minLength": 1
                      },
                      "age": {
                        "type": "integer",
                        "minimum": 18
                      }
                    }
                  },
                  "interestTags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
